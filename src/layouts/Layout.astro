
---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Master en IA Generativa - Aprende a construir el futuro" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
