---
interface Props {
  title?: string;
  description?: string;
  weeks?: string;
  class?: string;
}

const { title, description, weeks, class: className } = Astro.props;
---

<div class:list={[
  'bg-white/5 border-white/10 hover:border-purple-500/50 transition-all rounded-lg p-6',
  className
]}>
  {weeks && <div class="text-sm text-purple-400 mb-2">{weeks}</div>}
  {title && <h3 class="text-xl font-semibold mb-2">{title}</h3>}
  {description && <p class="text-white/60">{description}</p>}
  <slot />
</div>