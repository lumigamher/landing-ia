---
interface Props {
  variant?: 'primary' | 'secondary';
  class?: string;
}

const { variant = 'primary', class: className } = Astro.props;
---

<button
  class:list={[
    'px-8 py-4 rounded-lg font-medium transition-all transform hover:scale-105',
    variant === 'primary' && 'bg-purple-600 hover:bg-purple-500 text-white',
    variant === 'secondary' && 'border border-white/10 hover:border-white/20',
    className
  ]}
>
  <slot />
</button>